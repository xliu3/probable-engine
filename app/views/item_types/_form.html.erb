<%= form_for(@item_type) do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :name, 'name', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :base_fee, 'Base Fee', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.number_field :base_fee, class: 'form-control', min: 0, step: 0.01, required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :fee_per_day, 'Fee Per Day', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.number_field :fee_per_day, class: 'form-control', min: 0, step: 0.01, required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :disclaimer, 'Disclaimer', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.text_area :disclaimer, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', item_types_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
